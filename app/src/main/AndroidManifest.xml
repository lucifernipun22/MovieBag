<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nipun.moviebag">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.MovieApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieBag"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ReviewForTrending" />
        <activity android:name=".ui.CastForTrendingActivity" />
        <activity android:name=".ui.ReviewActivity" />
        <activity android:name=".ui.MovieDetailActivity2" />
        <activity android:name=".ui.CastActivity" />
        <activity android:name=".ui.MovieDetailActivity" />
        <activity android:name=".ui.MainActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>